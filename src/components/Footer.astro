---
// src/components/Footer.astro

/**
 * Footer
 * * This component defines the footer section of the website, which includes:
 * - A subtle divider line at the top for visual separation
 * - Social media links with icons (RSS, GitHub, Email)
 * - Additional links (About Site, Sitemap, License)
 */

import { AUTHOR } from "../consts";

const today = new Date();
---

<footer>
    <div class="footer-divider"></div>

    <div class="footer-content">

        <div class="social-links">
            <a href="/rss.xml" target="_blank" aria-label="RSS Feed">
                <span class="sr-only">RSS</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 11a9 9 0 0 1 9 9"/><path d="M4 4a16 16 0 0 1 16 16"/><circle cx="5" cy="19" r="1"/></svg>
            </a>
            <a href="https://github.com/SyncrexWen" target="_blank" aria-label="GitHub">
                <span class="sr-only">GitHub</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
            </a>
            <a href="mailto:kangchengwen@proton.me" aria-label="Email">
                <span class="sr-only">Email</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            </a>
        </div>

        <div class="links">
            <a href="/aboutWebsite">About Site</a>
            <span class="dot">·</span>
            <a href="/sitemap-index.xml">Sitemap</a>
            <span class="dot">·</span>
            <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer">CC BY-NC-SA 4.0</a>
        </div>

        <div class="copyright">
            &copy;
            <a href="/traces" class="secret-year">{today.getFullYear()}</a>
            {AUTHOR}. All rights reserved.
        </div>
    </div>
</footer>

<style>
    footer {
        /* using a transparent background,
        which reveal the background theme color */
        background: transparent;
        padding: 4rem 1rem 3rem 1rem;
        margin-top: auto;
        position: relative;
    }

    /* a soft divider */
    .footer-divider {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%; /* 不占满，显得更精致 */
        max-width: 600px;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(255, 255, 255, 0.1) 20%,
            rgba(255, 255, 255, 0.2) 50%,
            rgba(255, 255, 255, 0.1) 80%,
            transparent 100%
        );
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .social-links {
        display: flex;
        gap: 1.5rem;
    }
    .social-links a {
        color: #94a3b8;
        transition: all 0.3s ease;
        padding: 0.5rem;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.03);
    }
    .social-links a:hover {
        color: #f8fafc;
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .links {
        font-size: 0.875rem;
        color: #64748b;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .links a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s;
    }
    .links a:hover {
        color: #cbd5e1;
    }
    .dot {
        opacity: 0.3;
    }

    .copyright {
        font-size: 0.75rem;
        color: #475569;
        font-family: monospace;
    }

    .secret-year {
        color: inherit;
        text-decoration: none;
        transition: all 0s;
        cursor: text;
    }

    .secret-year:hover {
        color: #cbd5e1;
        text-shadow: 0 0 5px rgba(255,255,255,0.5);
        cursor: help;

        transition-delay: 2s;
    }
</style>
