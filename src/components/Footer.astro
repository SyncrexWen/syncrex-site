---
// src/components/Footer.astro

/**
 * Footer
 * * This component defines the footer section of the website, which includes:
 * - A subtle divider line at the top for visual separation
 * - Social media links with icons (RSS, GitHub, Email)
 * - Additional links (About Site, Sitemap, License)
 */

import { AUTHOR } from '../consts';
import Lang from './Lang.astro';

const footQuote = {
    en: "This is a garden, not a museum. Work in progress.",
    zh: "这不是博物馆，而是一座花园。一直在生长。"
};

type BilingualString = string | { zh: string; en: string };

const renderBilingual = (content: BilingualString) => {
    if (typeof content === 'string') return content;
    return `
    <span class="hidden-when-en">${content.zh}</span>
    <span class="hidden-when-zh">${content.en}</span>
    `;
};

const text = renderBilingual(footQuote);

const today = new Date();
---

<footer>
    <div class="footer-divider"></div>

    <div class="footer-content">

        <div class="foot-quote" set:html={text} />

        <div class="social-links">
            <a href="/rss.xml" target="_blank" aria-label="RSS Feed">
                <span class="sr-only">RSS</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M4 11a9 9 0 0 1 9 9"></path><path d="M4 4a16 16 0 0 1 16 16"
                    ></path><circle cx="5" cy="19" r="1"></circle></svg
                >
            </a>
            <a href="https://github.com/SyncrexWen" target="_blank" aria-label="GitHub">
                <span class="sr-only">GitHub</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path
                        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                    ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                >
            </a>
            <a href="mailto:kangchengwen@proton.me" aria-label="Email">
                <span class="sr-only">Email</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
                >
            </a>
        </div>

        <div class="links">
            <a href="/aboutWebsite">About Site</a>
            <span class="dot">·</span>
            <a href="/sitemap-index.xml">Sitemap</a>
            <span class="dot">·</span>
            <a
                href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
                target="_blank"
                rel="noopener noreferrer">CC BY-NC-SA 4.0</a
            >
        </div>

        <div class="copyright">
            &copy;
            <a href="/traces" class="secret-year">{today.getFullYear()}</a>
            {AUTHOR}. All rights reserved.
        </div>
    </div>
</footer>

<style>
    footer {
        /* using a transparent background,
        which reveal the background theme color */
        background: transparent;
        padding: 4rem 1rem 3rem 1rem;
        margin-top: auto;
        position: relative;
    }

    /* a soft divider */
    .footer-divider {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        max-width: 600px;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(255, 255, 255, 0.1) 20%,
            rgba(255, 255, 255, 0.2) 50%,
            rgba(255, 255, 255, 0.1) 80%,
            transparent 100%
        );
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .social-links {
        display: flex;
        gap: 1.5rem;
    }
    .social-links a {
        color: #94a3b8;
        transition: all 0.3s ease;
        padding: 0.5rem;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.03);
    }
    .social-links a:hover {
        color: #f8fafc;
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .links {
        font-size: 0.875rem;
        color: #64748b;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .links a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s;
    }
    .links a:hover {
        color: #cbd5e1;
    }
    .dot {
        opacity: 0.3;
    }

    .copyright {
        font-size: 0.75rem;
        color: #475569;
        font-family: monospace;
    }

    .secret-year {
        color: inherit;
        text-decoration: none;
        transition: all 0s;
        cursor: text;
    }

    .secret-year:hover {
        color: #cbd5e1;
        text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        cursor: help;

        transition-delay: 2s;
    }

    .foot-quote {
        font-size: 0.8rem;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        color: #55657e;
        opacity: 0.8;
        font-style: italic;
        text-align: center;
        max-width: 90%;
        margin: -0.5rem 0;
        transition: all 0.5s ease;
        cursor: default;
    }

    .foot-quote:hover {
        color: #94a3b8;
        opacity: 1;
        letter-spacing: 0.02em;
    }

</style>
