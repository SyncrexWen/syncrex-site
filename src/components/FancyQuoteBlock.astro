---
// src/components/QuoteBlock.astro
import Lang from './Lang.astro';

interface Props {
  zh?: string;
  en?: string;
  citeZh?: string;
  citeEn?: string;
  bgClass?: string;
}

const {
  zh,
  en,
  citeZh = "设计理念",
  citeEn = "Philosophy",
  bgClass = "bg-[#2d3748]"
} = Astro.props;

if (!zh && !en) return null;
---

<div class={`quote-container group relative overflow-hidden rounded-xl ${bgClass} shadow-lg my-8`}>

  <div class="absolute inset-0 opacity-10 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGNpcmNsZSBjeD0iMiIgY3k9IjIiIHI9IjIiIGZpbGw9IiNmZmYiLz48L3N2Zz4=')] pointer-events-none"></div>

  <div class="absolute -top-12 -right-12 w-32 h-32 bg-white/5 blur-2xl rounded-full pointer-events-none group-hover:bg-white/10 transition-colors duration-700"></div>
  <div class="absolute -bottom-12 -left-12 w-24 h-24 bg-black/20 blur-xl rounded-full pointer-events-none"></div>

  <div class="relative z-10 py-8 px-6 md:px-10 text-center flex flex-col items-center justify-center">

    <span class="text-4xl text-white/20 font-serif leading-none mb-2 select-none group-hover:text-white/30 transition-colors duration-500">“</span>

    <div class="max-w-2xl">
      {zh && (
        <Lang is="zh">
          <p class="text-lg md:text-xl font-serif leading-relaxed text-white/95 tracking-wide mb-3">
            {zh}
          </p>
          {citeZh && (
            <div class="flex items-center justify-center gap-2 opacity-80">
              <span class="h-px w-4 bg-white/30"></span>
              <cite class="text-xs font-medium text-white/70 not-italic uppercase tracking-widest">
                {citeZh}
              </cite>
              <span class="h-px w-4 bg-white/30"></span>
            </div>
          )}
        </Lang>
      )}

      {en && (
        <Lang is="en">
          <p class="text-lg md:text-xl font-serif leading-relaxed text-white/95 tracking-wide mb-3">
            {en}
          </p>
          {citeEn && (
            <div class="flex items-center justify-center gap-2 opacity-80">
              <span class="h-px w-4 bg-white/30"></span>
              <cite class="text-xs font-medium text-white/70 not-italic uppercase tracking-widest">
                {citeEn}
              </cite>
              <span class="h-px w-4 bg-white/30"></span>
            </div>
          )}
        </Lang>
      )}
    </div>
  </div>
</div>

<style>
  /* 保持入场动画 */
  .quote-container {
    animation: fadeIn 0.6s ease-out;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
