---
import { getCollection } from 'astro:content';
import CollectionLayout from '../../layouts/CollectionLayout.astro';
import Lang from '../../components/Lang.astro';

// 1. 获取数据 (注意：这里按日期排序很重要)
const thoughts = (await getCollection('thoughts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = {
  zh: "我的想法",
  en: "My Thoughts"
};

const pageDesc = {
    zh: "记录我的一些想法和随笔。",
    en: "Notes on my thoughts and essays."
}
---

<CollectionLayout
  title={pageTitle}
  description={pageDesc}
  items={thoughts}
  slugBase="thoughts"
>
  </CollectionLayout>
