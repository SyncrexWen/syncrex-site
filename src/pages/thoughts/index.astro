---
import { getCollection } from 'astro:content';
import CollectionLayout from '../../layouts/CollectionLayout.astro';

const thoughts = (await getCollection('thoughts')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = {
    zh: '碎碎念',
    en: 'Brain Dump',
};

const pageDesc = {
    zh: '捕捉稍纵即逝的灵感，包含大量非体系化思考与牢骚',
    en: 'Fragmented thoughts, unfiltered rants, and fleeting ideas.',
};
---

<CollectionLayout title={pageTitle} description={pageDesc} items={thoughts} slugBase="thoughts" />
