---
// /src/pages/aboutWebsite.astro

/**
 * About This Website Page
 * This page serves as a placeholder for information about this website. It uses the PageLayout component to provide a consistent layout with a title and description.
 * The content of this page is currently minimal, but it can be expanded in the future to include more detailed information, such as the purpose of the website, technologies used, or a changelog of updates.
 * The page supports bilingual content for the title and description, allowing for both Chinese and English versions to be displayed based on the user's language preference.
 */

import PageLayout from '../layouts/PageLayout.astro';

const pageTitle = {
    zh: '关于本站',
    en: 'About This Website',
};
const pageDesc = {
    zh: '关于本站的一些信息。',
    en: 'Information about this website.',
};
---

<PageLayout title={pageTitle} description={pageDesc}>
    <h1>About This Website</h1>
    <p>
        This is a placeholder page for information about this website. Content will be added here in
        the future.
    </p>
</PageLayout>
