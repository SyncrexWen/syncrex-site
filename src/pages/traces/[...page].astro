---
import type { GetStaticPaths, Page } from "astro";
import { getCollection, type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

export const getStaticPaths = (async ({ paginate }) => {
    const allTraces = await getCollection('traces');

    const sortedTraces = allTraces.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

    return paginate(sortedTraces, { pageSize: 10 });
}) satisfies GetStaticPaths;

interface Props {
    page: Page<CollectionEntry<'traces'>>;
}

const { page } = Astro.props;
---

<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Traces | 碎片</title>

    <style>
        body { background: #1a202c; color: #e2e8f0; font-family: sans-serif; margin: 0; padding: 2rem 1rem; }
        .container { max-width: 600px; margin: 0 auto; }
        .back-link { color: #718096; text-decoration: none; margin-bottom: 2rem; display: inline-block; }
    </style>
</head>
<body>
    <div class="container">
        {page.currentPage === 1 && <a href="/" class="back-link">← Return to Reality</a>}

        <div class="timeline">
            {page.data.map((trace) => (
                <article class="trace-item">

                    {/* 1. Time stamp */}
                    <div class="trace-meta">
                        <time datetime={trace.data.date.toISOString()}>
                            {trace.data.date.toLocaleDateString('zh-CN', {
                                month: 'short', day: 'numeric', hour: '2-digit', minute:'2-digit'
                            })}
                        </time>
                    </div>

                    {/* 2. Text content */}
                    <div class="trace-content">
                        {trace.body}
                    </div>

                    {/* 3. Image gallery */}
                    {trace.data.images && trace.data.images.length > 0 && (
                        <div class="gallery-scroll">
                            {trace.data.images.map((img) => (
                                <div class="gallery-item">
                                    <Image
                                        src={img}
                                        alt="Trace moment"
                                        width={600}
                                        quality={80}
                                        class="gallery-img"
                                    />
                                </div>
                            ))}
                        </div>
                    )}
                </article>
            ))}
        </div>

        {/* 4. Load more button */}
        {page.url.next && (
            <div class="load-more-container">
                <button
                    hx-get={page.url.next}
                    hx-select=".timeline > *, .load-more-container"
                    hx-swap="outerHTML"
                    class="load-more-btn"
                >
                    Load Previous Moments
                </button>
            </div>
        )}
    </div>
</body>
</html>

<style>
    /* ... 保持你原有的 CSS 不变 ... */
    .trace-item {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    .trace-meta {
        font-size: 0.85rem;
        color: #718096;
        margin-bottom: 0.5rem;
        font-family: monospace;
    }
    .trace-content {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        white-space: pre-wrap;
    }
    .gallery-scroll {
        display: flex;
        gap: 1rem;
        overflow-x: auto;
        padding-bottom: 1rem;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
    }
    .gallery-scroll::-webkit-scrollbar {
        display: none;
    }
    .gallery-item {
        flex: 0 0 85%;
        scroll-snap-align: center;
        border-radius: 12px;
        overflow: hidden;
        position: relative;
        max-height: 500px;
    }
    .gallery-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    .gallery-item:active .gallery-img {
        transform: scale(1.02);
    }
    .load-more-btn {
        background: transparent;
        border: 1px solid #4a5568;
        color: #a0aec0;
        padding: 0.8rem 2rem;
        border-radius: 99px;
        cursor: pointer;
        width: 100%;
        transition: all 0.2s;
    }
    .load-more-btn:hover {
        background: rgba(255,255,255,0.05);
        color: #fff;
    }
</style>

<script>
    // 既然你在用 NPM 方式引入，这段代码是正确的
    import htmx from 'htmx.org';

    // TS 可能会在这里报错说 Window 上没有 htmx 属性，可以强行转换一下或者忽略
    // @ts-ignore
    window.htmx = htmx;
</script>
